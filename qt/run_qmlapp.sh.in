debug=0
debugger="gdb"
debugger_args=""

while [ $# -gt 0 ]; do
  case "$1" in
    -g | --debug)
      debug=1
      shift
      ;;
    -d | --debugger)
      debugger=$2
      if [ "$debugger" -ne "" ]; then
        shift 2
      else
        echo "-d requires an argument"
        exit 1
      fi
      ;;
    -a | --debugger-args)
      debugger_args=$2
      if [ "$debugger_args" -ne "" ]; then
        shift 2
      else
        echo "-a requires an argument"
        exit 1
      fi
      ;;
    --)
      shift
      break
      ;;
    *)
      break
      ;;
  esac
done

if [ $# -eq 0 ]; then
  echo "Need to specify a qmlscene binary to run"
  exit 1
fi

app=$1
shift

export LD_LIBRARY_PATH=@CHROMIUM_LIB_DIR@${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}
export OXIDE_SUBPROCESS_PATH=@CHROMIUM_PRODUCT_DIR@/@OXIDE_RENDERER_NAME@
export OXIDE_NO_SANDBOX=1
export QML2_IMPORT_PATH=${QML2_IMPORT_PATH:+$QML2_IMPORT_PATH:}@QMLPLUGIN_OUTPUT_DIR@

if [ $debug -eq 1 ]; then
  debugger=`which $debugger`
  if [ ! -x $debugger ] ; then
    echo "Invalid debugger"
    exit 1
  fi

  case `basename $debugger` in
    gdb)
      exec $debugger $debugger_args --args $app "$@"
      ;;
    *)
      exec $debugger $moz_debugger_args $app "$@"
      ;;
  esac
else
  exec $app "$@"
fi

from __future__ import print_function
import glob
import os
import os.path
import sys

src_dir = os.path.dirname(os.path.dirname(os.path.realpath(__file__)))
chromium_src = os.path.join(src_dir, 'chromium', 'src')

sys.path.insert(0, os.path.join(chromium_src, 'tools', 'gyp', 'pylib'))
try:
    import gyp
except ImportError:
    print('Cannot find gyp module. Do you have a Chromium checkout?', file=sys.stderr)
    sys.exit(1)

sys.path.insert(1, os.path.join(chromium_src, 'tools', 'grit'))
sys.path.insert(1, os.path.join(chromium_src, 'chrome', 'tools', 'build'))
sys.path.insert(1, os.path.join(chromium_src, 'third_party', 'WebKit', 'Source', 'build', 'scripts'))

def additional_include_files(args=[]):
    specified_includes = set()
    for arg in args:
        if arg.startswith('-I') and len(arg) > 2:
            specified_includes.add(os.path.realpath(arg[2:]))

    result = []
    def AddInclude(path):
        if os.path.realpath(path) not in specified_includes:
            result.append(path)

    # Always include share.gypi
    AddInclude(os.path.join(src_dir, 'shared', 'shared.gypi'))

    # Always include common.gypi from Chromium
    AddInclude(os.path.join(chromium_src, 'build', 'common.gypi'))

    # Always include common.gypi from Oxide
    AddInclude(os.path.join(src_dir, 'build', 'common.gypi'))

    # Optionally add supplemental .gypi files if present.
    supplements = glob.glob(os.path.join(chromium_src, '*', 'supplement.gypi'))
    for supplement in supplements:
        AddInclude(supplement)

    return result

if __name__ == '__main__':
    args = sys.argv[1:]

    args.append(os.path.join(src_dir, 'build', 'all.gyp'))
    args.extend(['-I' + i for i in additional_include_files(args)])

    args.append('--no-circular-check')
    args.extend(['--toplevel-dir', src_dir])
    args.extend(['--depth', chromium_src])
    args.extend(['--suffix', '.oxide'])
    args.extend(['--format', 'make'])
    args.append('-Goutput_dir=%s' % os.path.join(chromium_src, 'out'))

    os.chdir(src_dir)
    sys.exit(gyp.main(args))
